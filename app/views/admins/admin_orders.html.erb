<%= render 'shared/application_nav' %>
<p id="notice"><%= notice %></p>

<table class="table">
  <thead class="thead-dark">
    <th>Order</th>
    <th>Date Created</th>
    <th>Tracking</th>
    <th>Total</th>
    <th>Status</th>
    <th></th>
  </thead>

  <tbody>    
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "#{order.id}", order %></td>
        <td><%= order.created_at.strftime("%m-%d-%Y") %></td>        
        <td><%= link_to "#{order.tracking}" %></td>
        <td><%= order.total %></td>
        <td><%= order.order_status_id %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>        
      </tr>        
    <% end %>
  </tbody>
</table>