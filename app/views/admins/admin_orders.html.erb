<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "#{order.id}", order %></td>
        <td><%= order.created_at %></td>        
        <td><%= link_to 'Edit', edit_product_path(order) %></td>
        <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>        
      </tr>

      <hr>
      <%= order.inspect %>
      <hr>
      
    <% end %>
  </tbody>
</table>

<br>

