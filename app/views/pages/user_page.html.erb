<%= render 'shared/category_nav' %>
<br>
<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Date Placed</th>
      <th>Status</th>
      <th>Tracking</th>
      <th>Total</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= link_to "#{purchase_order.id}", purchase_order %></td>          
        <td><%= purchase_order.created_at.strftime("%m-%d-%Y") %></td>
        <td><%= purchase_order.purchase_order_status_id %></td>
        <td><%= purchase_order.tracking %></td>
        <td><%= purchase_order.total %></td> 
        
        
      </tr>
    <% end %>
  </tbody>
</table>