<p id="notice"><%= notice %></p>

<h1>Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Billing First Name</th>
      <th>Address line 1</th>
      <th>Address line 2</th>      
      <th>State</th>
      <th>Zip code</th>
      <th>Shipping First Name</th>
      <th>Shipping Last Name</th>      
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.id %></td>
        <td><%= purchase_order.billing_first_name %></td>
        <td><%= purchase_order.billing_address_1 %></td>
        <td><%= purchase_order.billing_address_2 %></td>        
        <td><%= purchase_order.billing_state %></td>
        <td><%= purchase_order.billing_zip %></td>        
        <td><%= purchase_order.shippig_first_name %></td>
        <td><%= purchase_order.shipping_last_name %></td>        
        <td><%= purchase_order.total %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

